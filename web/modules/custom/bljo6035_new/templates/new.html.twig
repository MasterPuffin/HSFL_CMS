  {%  for recipe in text %}
    <article role="article">
      <h3 class="Card-label">
        <a href="{{ path('entity.node.canonical', {'node': recipe.id}) }}" rel="bookmark">
          {{ recipe.title.value }}
        </a>
      </h3>
      <div class="Card-content">
        <p>{{ recipe.field_einleitung.value }}</p>
        <p class="Card-links">
          <a href="{{ path('entity.node.canonical', {'node': recipe.id}) }}" hreflang="de">Weiterlesen</a>
        </p>
      </div>
    </article>
    <hr>
  {% endfor %}
